<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".user_login">

    <EditText
        android:id="@+id/layout5_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="edit0"
        ></EditText>
    <EditText
        android:id="@+id/layout5_et2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/layout5_et1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PW"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="123"
        ></EditText>
    
    <Button
        android:id="@+id/layout5_b1"
        android:layout_below="@+id/layout5_et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:text="ID/PW찾기"
        android:textSize="20dp"
        ></Button>

    <Button
        android:id="@+id/layout5_b2"
        android:layout_below="@+id/layout5_et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="220dp"
        android:text="     로그인    "
        android:textSize="20dp"
        ></Button>
    
</RelativeLayout>
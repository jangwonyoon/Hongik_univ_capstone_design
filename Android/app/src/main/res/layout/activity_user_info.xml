<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".user_info">


    <TextView
        android:id="@+id/layout5_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호 입력"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="30dp"
        android:textStyle="bold">

    </TextView>

    <EditText
        android:id="@+id/layout5_et2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:layout_below="@+id/layout5_tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="비밀번호(Password)"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="123"
        ></EditText>

    <Button
        android:id="@+id/layout5_b1"
        android:layout_below="@+id/layout5_et2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:text="확인(Check)"

        android:textSize="20dp"
        ></Button>

</RelativeLayout>